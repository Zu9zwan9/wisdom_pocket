# Wisdom Pocket - Example environment variables
# Copy this file to .env and fill in secrets for local development

# Backend
DATABASE_URL=postgresql+asyncpg://wp_user:wp_password@postgres:5432/wisdom_pocket
REDIS_URL=redis://redis:6379/0
JWT_SECRET=replace_me_with_a_secure_secret
REVENUECAT_SECRET=replace_me_with_mock_secret
SENTRY_DSN=
ENV=development
RATE_LIMIT_PER_MINUTE=60

# Backend Server
BACKEND_PORT=8000
BACKEND_HOST=0.0.0.0

# Frontend / App flags
USE_REVENUECAT_MOCK=true
FEATURE_SHARE_TO_UNLOCK=true
FEATURE_REFERRAL_FLOW=true
FEATURE_CONFETTI_ON_EXTRACT=false
